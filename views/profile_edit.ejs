<link rel="stylesheet" href="/css/profile_edit.css">
<% if(user.id==profile_user.id){ %>
    <form action="/users/update" method="POST" enctype="multipart/form-data">
        <div id="pro-edit_main-div">
            <section>
                <div class="lx-container-70">
                    <div>
                        <h1 class="title">Edit your profile</h1>
                    </div>
                    <div class="lx-row align-stretch">
                        <div class="lx-column column-user-pic">
                            <div class="profile-pic bs-md">
                                <h1 class="pic-label">Profile picture</h1>
                                <div class="pic bs-md">
                                    <img src="/upload/<%= (profile_user.avatar)? profile_user.avatar : 'default-avatar.jpg' %>"
                                        alt="Profile Picture" id="profile-img" width="4024" height="6048" loading="lazy">
                                    <p id="change-avatar" class="lx-btn">
                                        <input type="file" id="file-input" name="avatar"
                                            title="Change your profile picture" />
                                    </p>
                                </div>
                                <div class="pic-info">
                                    <p><i class="fas fa-exclamation-triangle"></i>&nbsp;&nbsp;This photo will appear on
                                        the
                                        platform, in your contributions or where it is mentioned.</p>
                                </div>
                            </div>
                        </div>
                        <div class="lx-column">
                            <div id="user-form-div">
                                <div class="fieldset">
                                    <label for="user-name">Name</label>
                                    <div class="input-wrapper">
                                        <span class="icon"><i class="fas fa-user"></i></span>
                                        <input name="name" type="text" id="user-name" value="<%= profile_user.name %>"
                                            autocomplete="username" required>
                                    </div>
                                    <div id="user-name-helper" class="helper">
                                        <p>Your name can appear on the platform, in your contributions or where it is
                                            mentioned.</p>
                                    </div>
                                </div>

                                <div class="fieldset">
                                    <label for="email">E-mail</label>
                                    <div class="input-wrapper">
                                        <span class="icon"><i class="fas fa-envelope"></i></span>
                                        <input name="email" type="email" id="email" value="<%= profile_user.email %>"
                                            autocomplete="username">
                                    </div>
                                    <div id="email-helper" class="helper"></div>
                                </div>
                                <!-- <div class="fieldset">
                                    <label for="pass">Password</label>
                                    <div class="input-wrapper">
                                        <span class="icon"><i class="fas fa-key"></i></span>
                                        <input type="password" id="pass" value="pass123*"
                                            autocomplete="current-password">
                                    </div>
                                    <div id="pass-helper" class="helper"></div>
                                </div> -->
                                <div class="fieldset">
                                    <label for="user-id">Profile Tagline</label>
                                    <div class="input-wrapper">
                                      <span class="icon"><i class="fas fa-info"></i></span>
                                      <input name="tagline" type="text" id="user-id" value="<%= profile_user.tagline %>">
                                    </div>
                                    <div id="user-id-helper" class="helper"></div>
                                  </div>
                                <div class="actions">
                                    <button type="submit" id="save" class="lx-btn"><i
                                            class="fas fa-save"></i>&nbsp;&nbsp;Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </form>
<%}else{%>
    <!-- else show only the profile info -->
    <p>
        <%= profile_user.name %>
    </p>
    <p>
        <%= profile_user.email %>
    </p>
<%} %>

<script src="https://use.fontawesome.com/releases/v5.14.0/js/all.js" defer crossorigin="anonymous"
    data-search-pseudo-elements></script>
<script src="/javascripts/profile_edit.js"></script>