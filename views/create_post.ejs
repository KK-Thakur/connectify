<link rel="stylesheet" href="/css/create_post.css">

<body>
    <% if(locals.user){%>
    <div class="pageContainer">
        <form action="/posts/create" method="post" enctype="multipart/form-data" id="new-post-form">
            <h3>Create new post</h3>
            <div class="drop-zone">
                <label for="input-file" id="drop-area">
                    <input type="file" name="post-file" accept="image/*" id="input-file" hidden required>
                    <div id="img-view">
                        <img src="/images/upload-icon.png" alt="">
                        <p>Drag and drop or click here <br> to upload image</p>
                        <span>Upload any image from Desktop</span>
                    </div>
                </label>
            </div>
            <div class="other_details">
                <textarea name="content" cols="30" rows="2" placeholder="Type here..." required></textarea>
                <button type="submit" id="submbtn">Post</button>
            </div>
        </form>
    </div>
    <%}%>
</body>

<script src="/javascripts/create_post.js"></script>
